<div id="signup">
  <h2>Create an account</h2>

  <form action="/signup" method="POST">
    <label>Name</label>
    <input type="text" name="name" />
    <label>Email</label>
    <input type="email" name="email" />
    <label>Password</label>
    <input type="password" name="password" />
    <input type="submit" value="Sign up">
  </form>
</div>